# ContratoRÃ¡pido - Local Development Environment
# Used by docker-compose.local.yml

# =================================
# Local Development Configuration
# =================================
NODE_ENV=development
DEBUG=true

# =================================
# Database Passwords (Local Only)
# =================================
POSTGRES_PASSWORD=postgres123
MONGO_ROOT_PASSWORD=mongo123
REDIS_PASSWORD=redis123

# =================================
# MongoDB Configuration
# =================================
MONGO_ROOT_USER=contratorapido
MONGO_DATABASE=contratorapido
MONGODB_CONNECTION_STRING=mongodb://contratorapido:mongo123@mongodb:27017/contratorapido?authSource=admin&replicaSet=rs0

# =================================
# n8n Configuration
# =================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678
N8N_EDITOR_BASE_URL=http://localhost:5678

# Queue mode
N8N_EXECUTIONS_MODE=queue
N8N_WORKERS_CONCURRENCY=2

# =================================
# Service URLs (Local)
# =================================
# n8n UI
N8N_URL=http://localhost:5678

# MongoDB Admin
MONGO_EXPRESS_URL=http://localhost:8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=admin123

# Redis Admin
REDIS_COMMANDER_URL=http://localhost:8082
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASS=admin123

# Gotenberg PDF Service
GOTENBERG_URL=http://localhost:3000

# =================================
# WhatsApp Business API (Test/Development)
# =================================
# Use test credentials or webhook.site for local testing
WHATSAPP_VERIFY_TOKEN=test_verify_token_123
WHATSAPP_WEBHOOK_SECRET=test_webhook_secret_123

# For local testing without real WhatsApp
WHATSAPP_TOKEN=test_token
WHATSAPP_PHONE_NUMBER_ID=test_phone_id
WHATSAPP_BUSINESS_ACCOUNT_ID=test_account_id

# =================================
# OpenAI Configuration (Development)
# =================================
# Use your actual OpenAI key for testing
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Model settings for development
OPENAI_MODEL_MAIN=gpt-4-turbo-preview
OPENAI_MODEL_FALLBACK=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# =================================
# Timezone
# =================================
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# =================================
# Logging & Debug
# =================================
LOG_LEVEL=debug
LOG_OUTPUT=console
N8N_LOG_LEVEL=info
N8N_METRICS=true

# =================================
# Development Features
# =================================
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_MOCK_WHATSAPP=true
ENABLE_TEST_ENDPOINTS=true